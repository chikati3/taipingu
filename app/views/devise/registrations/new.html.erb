<div class="contents">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new-user', class: 'new-user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :nickname, class:"form-text" %><br/>
        <%= f.text_field :nickname, class:"input-default", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, class:"form-text" %><br/>
        <%= f.email_field :email, class:"input-default" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class:"form-text" %><br/>
        <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class:"form-text" %><br/>
        <%= f.password_field :password_confirmation, class:"input-default", autocomplete: "off" %>
      </div>

      <div class="submit-btn">
        <%= f.submit "新規登録", class:"submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
