<div class="contents">
  <div class="container">
    <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path, class: 'sessions-user', local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, class:"form-text" %><br/>
        <%= f.email_field :email, class:"input-default", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class:"form-text" %><br/>
        <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
      </div>

      <div class="submit-btn">
        <%= f.submit "ログイン", class:"submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
